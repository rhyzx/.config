[user]
    name = rhyzx
    email= rhyzix@gmail.com
[alias]
    b  = branch -vv
    bd = branch -d
    ba = branch -a
    br = branch -r
    
    c  = commit -am
    cm = commit -m
    ce = commit --amend
    ca = commit --amend --no-edit
    cau= commit --amend --reset-author --no-edit
    caa= commit --amend -a --no-edit

    dif = diff --cached

    co = checkout
    s  = status -s

    m  = merge --no-ff

    p  = push
    pu = push -u
    pr = pull --rebase
    pp = !git pull --rebase && git push

    st = stash save # additional message
    sl = stash list
    sp = stash pop
    # sc = stash clear # too danger
    sa = stash apply
    ss = "!f() { git stash show stash@{${1-0}}; }; f"
    sss= "!f() { git stash show stash@{${1-0}} -p; }; f"

    r  = reset
    rh = reset --hard

    rb = rebase
    ri = rebase -i
    ra = rebase --abort
    rs = rebase --skip
    rc = rebase --continue

    l  = log --oneline --first-parent
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    ls = log --stat

    cp = cherry-pick
    root = rev-parse --show-toplevel


    # git svn
    sd = svn dcommit
    sr = svn rebase
    sf = svn fetch

    # set email & username for company
    config2 = "!f() { git config user.name '2'; git config user.email '2@me.com'; }; f"
[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.config/gitignore_global
[color]
    ui = auto
[push]
    default = upstream
[log]
	date = relative
[rerere]
	enabled = true

[alias]
    b  = branch
    bd = branch -d
    ba = branch -a
    br = branch -r
    
    c  = commit -am
    cm = commit -m
    ca = commit --amend

    co = checkout
    s  = status -s

    m  = merge --no-ff

    p  = push
    pu = push -u
    pr = pull --rebase
    pp = !git pull --rebase && git push

    st = stash
    sp = stash pop
    sc = stash clear
    sa = stash apply

    r  = reset
    rh = reset --hard

    rb = rebase
    ra = rebase --abort
    rs = rebase --skip
    rc = rebase --continue

    l  = log --oneline
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

    cp = cherry-pick
    root = rev-parse --show-toplevel


    # git svn
    sd = svn dcommit
    sr = svn rebase
    sf = svn fetch
[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.config/gitignore_global
[color]
    ui = auto
[push]
    default = upstream
